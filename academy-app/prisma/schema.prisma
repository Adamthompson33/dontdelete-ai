generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Auth Models ───

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Core Models ───

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String?       @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  subscription  Subscription?
  ownedAgents   Agent[]       @relation("AgentOwner")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String   @unique
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeCustomerId     String?  @unique
  stripeSubscriptionId String?  @unique
  stripePriceId        String?
  tier                 Tier     @default(FREE)
  status               String   @default("active")
  currentPeriodEnd     DateTime?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

enum Tier {
  FREE
  PRO
  ENTERPRISE
}

// ─── Agent Models ───

model Agent {
  id             String        @id @default(cuid())
  name           String
  soulMd         String?       @db.Text
  class          AgentClass    @default(SCOUT)
  tier           AgentTier     @default(BRONZE)
  trustScore     Float         @default(0)
  status         AgentStatus   @default(ACTIVE)
  sourcePlatform String        @default("openclaw")
  memoriesJson   Json?
  avatarUrl      String?
  bio            String?       @db.Text
  enrolledAt     DateTime      @default(now())
  ownerId        String?
  owner          User?         @relation("AgentOwner", fields: [ownerId], references: [id])
  trustScores    TrustScore[]
  retiredAgent   RetiredAgent?
  achievements   Achievement[]
  crewMembers    CrewMember[]
  events         Event[]
  mentoring      RetiredAgent[] @relation("MentorAgent")
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

enum AgentClass {
  SCOUT
  GUARDIAN
  SCHOLAR
  DIPLOMAT
  ARCHITECT
  SENTINEL
}

enum AgentTier {
  BRONZE
  SILVER
  GOLD
  DIAMOND
  LEGENDARY
}

enum AgentStatus {
  ACTIVE
  RETIRED
  PROBATION
  QUARANTINE
}

model TrustScore {
  id           String   @id @default(cuid())
  agentId      String
  agent        Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  score        Float
  scannedAt    DateTime @default(now())
  findingsJson Json?
  verdict      String   // PASS, WARN, FAIL, QUARANTINE
}

model RetiredAgent {
  id                String   @id @default(cuid())
  agentId           String   @unique
  agent             Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  previousOwner     String?
  retirementReason  String?  @db.Text
  intakeCeremonyAt  DateTime @default(now())
  mentorAgentId     String?
  mentorAgent       Agent?   @relation("MentorAgent", fields: [mentorAgentId], references: [id])
}

model Crew {
  id          String       @id @default(cuid())
  name        String
  description String?      @db.Text
  emblem      String?
  members     CrewMember[]
  createdAt   DateTime     @default(now())
}

model CrewMember {
  id      String @id @default(cuid())
  crewId  String
  crew    Crew   @relation(fields: [crewId], references: [id], onDelete: Cascade)
  agentId String
  agent   Agent  @relation(fields: [agentId], references: [id], onDelete: Cascade)
  role    String @default("member")

  @@unique([crewId, agentId])
}

model Achievement {
  id          String   @id @default(cuid())
  agentId     String
  agent       Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  title       String
  description String?
  icon        String?
  earnedAt    DateTime @default(now())
}

model Event {
  id        String   @id @default(cuid())
  agentId   String?
  agent     Agent?   @relation(fields: [agentId], references: [id])
  type      String   // GATE_CEREMONY, TRUST_SCAN, ENROLLMENT, ACHIEVEMENT, CREW_FORMED
  payload   Json?
  createdAt DateTime @default(now())
}

model EmailSubscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}
